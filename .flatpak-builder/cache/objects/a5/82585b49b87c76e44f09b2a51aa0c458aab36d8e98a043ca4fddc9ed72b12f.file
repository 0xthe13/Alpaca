[Application]
name=com.jeffser.Alpaca
runtime=org.gnome.Platform/x86_64/46
sdk=org.gnome.Sdk/x86_64/46
command=alpaca

[Context]
shared=network;ipc;
sockets=x11;wayland;fallback-x11;
devices=dri;

[Extension com.jeffser.Alpaca.Locale]
directory=share/runtime/locale
autodelete=true
locale-subset=true

[Extension com.jeffser.Alpaca.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=com.jeffser.Alpaca.Locale;com.jeffser.Alpaca.Debug;